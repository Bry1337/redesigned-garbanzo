<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="bry1337.github.io.newsthings.ui.detail.DetailViewModel"
        />
  </data>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/ivNewsImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/value_200dp"
        android:layout_marginBottom="@dimen/value_4dp"
        android:layout_marginEnd="@dimen/value_4dp"
        android:layout_marginStart="@dimen/value_4dp"
        android:layout_marginTop="@dimen/value_10dp"
        />
    <TextView
        android:id="@+id/tvAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_2dp"
        app:mutableText="@{viewModel.getAuthor()}"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_2dp"
        app:mutableText="@{viewModel.getTitle()}"

        />
    <TextView
        android:id="@+id/tvPublishedAt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_2dp"
        app:mutableText="@{viewModel.getPublishedAt()}"
        />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/value_2dp"
        app:mutableText="@{viewModel.getDescription()}"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/value_4dp"
        android:layout_marginStart="@dimen/value_4dp"
        android:layout_marginTop="@dimen/value_10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        >
      <Button
          android:id="@+id/btnSave"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/value_4dp"
          android:layout_weight="1"
          android:background="@color/colorPrimary"
          android:text="@string/save"
          android:textColor="@android:color/white"
          />
      <Button
          android:id="@+id/btnArchive"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_margin="@dimen/value_4dp"
          android:layout_weight="1"
          android:background="@color/colorPrimary"
          android:text="@string/archive"
          android:textColor="@android:color/white"
          />

    </LinearLayout>
  </LinearLayout>

</layout>
